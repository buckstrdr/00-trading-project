
//@version=5
indicator("Momentum Scalping Strategy", overlay=true)

// PROFITABLE SCALPING CONFIGURATION
// Pattern: Volume + Momentum
// Target: Extended (1.5pt)
// Expected: 16.0 signals/day, 36.4% win rate


// Volume + Momentum Pattern
volume_spike = volume > ta.sma(volume, 5) * 2.0
price_move = math.abs(close - open) >= 1.0
strong_body = math.abs(close - open) / (high - low) >= 0.6
scalp_signal = volume_spike and price_move and strong_body

// Scalping Targets
target_pts = 1.5
stop_pts = 0.7

// Entry Logic
long_signal = scalp_signal and close > open
short_signal = scalp_signal and close < open

// Plot Signals
plotshape(long_signal, title="Long Scalp", location=location.belowbar, 
          color=color.green, style=shape.triangleup, size=size.small)
plotshape(short_signal, title="Short Scalp", location=location.abovebar, 
          color=color.red, style=shape.triangledown, size=size.small)

// Alert Conditions
alertcondition(long_signal, title="Long Scalp Signal", message="LONG scalp opportunity")
alertcondition(short_signal, title="Short Scalp Signal", message="SHORT scalp opportunity")
